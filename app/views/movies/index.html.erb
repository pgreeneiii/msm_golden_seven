<div class="container">
   <h1>Movies</h1>

   <a href="/movies/new">Add new movie</a>

   <% @movies.each do |movie| %>

      <div class="row">
         <div class="col-md-offset-3 col-md-6" style="text-align:center;">
            <h4><%= movie.title %></h4>
            <img src="<%= movie.image_url %>" style="height:500px;">
            <a class="btn btn-primary btn-block" href="/movies/<%= movie.id %>" role="button">Show Details</a>
            <a class="btn btn-warning btn-block" href="/movies/edit/<%= movie.id %>" role="button">Edit</a>
            <a class="btn btn-danger btn-block" href="/delete_movie/<%= movie.id %>" role="button">Delete</a>
         </div>
      </div>

   <% end %>

</div>
