<div class="container">
   <h1>Directors</h1>

   <a href="/directors/new">Add a new director</a>

   <% @directors.each do |director| %>

      <div class="row">
         <div class="col-md-offset-3 col-md-6" style="text-align:center;">
            <h4><%= director.name %></h4>
            <img src="<%= director.image_url %>" style="height:300px;">
            <a class="btn btn-primary btn-block" href="/directors/<%= director.id %>" role="button">Show Details</a>
            <a class="btn btn-warning btn-block" href="/directors/edit/<%= director.id %>" role="button">Edit</a>
            <a class="btn btn-danger btn-block" href="/delete_director/<%= director.id %>" role="button">Delete</a>
         </div>
         </div>
      </div>

   <% end %>

</div>
