<h1>Edit <%= @director.name %></h1>

<form action="/update_director/<%= @director.id %>">
   <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" value="<%= @director.name %>" name="name">
   </div>
   <div class="form-group">
      <label for="dob">DOB</label>
      <input type="text" class="form-control" id="dob" value="<%= @director.dob %>" name="dob">
   </div>
   <div class="form-group">
      <label for="bio">Bio</label>
      <input type="text" class="form-control" id="bio" value="<%= @director.bio %>" name="bio">
   </div>
   <div class="form-group">
      <label for="image_url">Image URL</label>
      <input type="text" class="form-control" id="image_url" value="<%= @director.image_url %>" name="image_url">
   </div>
   <div class="form-group">
      <input type="submit" value="Update Director" class="btn btn-primary">
   </div>
</form>
